<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CC_Food.Pages.Waiters.WaitersListViewPage"
             Visual="Material">

    <ContentPage.Content>
        <StackLayout Visual="Material">
            <Label Text="Garçons" VerticalOptions="Center" Font="25" HorizontalOptions="Center"/>
            <ListView x:Name="lvItems" RowHeight="70" Visual="Material">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Padding="5, 0, 5, 0" Orientation="Vertical" Visual="Material">
                                <Label Text="{Binding name}" TextColor="#000" FontSize="Large"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
    
</ContentPage>
